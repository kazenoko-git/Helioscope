{
  "$schema": "https://schema.tauri.app/config/2",
  "identifier": "com.solar.verify",

  "build": {
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },

  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Helioscope",
        "width": 1000,
        "height": 700,
        "resizable": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "scope": ["$APPLOCALDATA/output/**"]
      }
    }
  }
}
